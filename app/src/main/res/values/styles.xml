<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "NoActionBar" parent = "@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Font -->
    <style name="BlueBigTitle">
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FontBigDark">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Edit Box-->
    <style name="EditBox1">
        <item name="android:background">@drawable/editbox1</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="EditBox2">
        <item name="android:background">@drawable/editbox1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="EditSquare">
        <item name="android:background">@drawable/editboxsquare</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- Button -->
    <style name="Button1">
        <item name="android:background">@drawable/button1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonRed">
        <item name="android:background">@drawable/buttonred</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:background">@drawable/buttongreen</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="lineVertical">
        <item name="android:background">@color/lightGray</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
