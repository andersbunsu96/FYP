<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_job">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Name:"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditSquare"
                android:hint="Job Name"
                android:inputType="textPersonName"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Detail:"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditSquare"
                android:hint="Job Detail"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send to Financial Controller:"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/EditSquare"
                android:hint="Financial Controller"/>

            <Button
                android:id="@+id/btnCreateJob"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Create Job"
                style="@style/Button1"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>