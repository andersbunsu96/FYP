<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechnicianDashboard"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logged as, "/>

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="username"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/viewJob"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="View Job"
            android:background="@drawable/view_ongoing_job"
            style="@style/Button1"/>

        <ImageButton
            android:id="@+id/viewJobDone"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Update Location"
            android:background="@drawable/view_finished_job"
            style="@style/Button1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/updateLocation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Update Location"
            android:background="@drawable/update_location"
            style="@style/Button1"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="View Job"
            android:background="@drawable/view_job_technician"
            style="@style/Button1"
            android:visibility="invisible"/>

    </LinearLayout>


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Log Out"
        style="@style/Button1"
        android:layout_gravity="center"/>

</LinearLayout>