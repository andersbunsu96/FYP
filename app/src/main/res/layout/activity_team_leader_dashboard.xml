<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamLeaderDashboard"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logged as, "/>

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="username"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/tvCreatedJob"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="View Job"
            android:background="@drawable/coordinator_job_created"
            style="@style/Button1"/>

        <ImageButton
            android:id="@+id/tvFinishedJob"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="View Finished Job"
            android:background="@drawable/coordinator_job_finished"
            style="@style/Button1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/tvLocation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Worker Location"
            android:background="@drawable/location_worker"
            style="@style/Button1"/>

        <Button
            android:visibility="invisible"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="View Finished Job"
            style="@style/Button1"/>

    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Log Out"
        style="@style/Button1"
        android:layout_gravity="center"/>

</LinearLayout>